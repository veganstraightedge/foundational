<div class='container'>
  <div class='row'>
    <div class='col-12 col-md-8 offset-md-2'>

      <% if notice.present? %>
        <div class='alert alert-info mb-5'>
          <div class='alert-text'>
            <%= Markdown.render(notice).html_safe %>
          </div>
        </div>
      <% end %>

      <% if alert.present? %>
        <div class='alert alert-danger mb-5'>
          <div class='alert-text'>
            <%= Markdown.render(alert).html_safe %>
          </div>
        </div>
      <% end %>

    </div>
  </div>
</div><!-- .container -->
