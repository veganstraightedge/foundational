<div class="container">
  <h2 class="display-1">Sign up</h2>

  <%= form_for resource, as: resource_name, url: registration_path(resource_name) do |form| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="form-group">
      <%= form.label       :email %>
      <%= form.email_field :email, autofocus: true, autocomplete: "email", class: "form-control form-control-lg" %>
    </div>

    <div class="row">
      <div class="col-12 col-md-6">
        <div class="form-group">
          <%= form.label          :password %>
          <%= form.password_field :password, autocomplete: "new-password", class: "form-control form-control-lg" %>
          <p class="form-text text-muted"><%= @minimum_password_length %> characters minimum</p>
        </div>
      </div>

      <div class="col-12 col-md-6">
        <div class="form-group">
          <%= form.label          :password_confirmation %>
          <%= form.password_field :password_confirmation, autocomplete: "new-password", class: "form-control form-control-lg" %>
        </div>
      </div>
    </div>

    <div class="actions">
      <%= form.submit "Sign up â†’" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div><!-- .container -->
