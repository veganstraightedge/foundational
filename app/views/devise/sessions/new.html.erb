<div class="container">
  <div class="col-12 col-md-8 offset-md-2">

    <h2 class="display-3">Sign in</h2>

    <%= form_for resource, as: resource_name, url: session_path(resource_name) do |form| %>
      <%= render "devise/shared/labeled_email_field",
                 form: form,
                 name: :email %>

      <%= render "devise/shared/labeled_password_field",
                 form: form,
                 name: :password,
                 autocomplete: "current-password" %>

      <div class="form-check form-switch">
        <%= form.check_box :remember_me, checked: true,     class: "form-check-input" %>
        <%= form.label     :remember_me, "Stay signed in?", class: "form-check-label" %>
      </div>

      <div class="actions">
        <%= form.submit "Sign in â†’" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>

  </div><!-- main column -->
</div><!-- .container -->
