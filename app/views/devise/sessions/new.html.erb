<div class='container'>
  <%= tag.div class: wrapper_row_classes do %>
    <%= tag.div class: wrapper_columns_classes do %>

      <h2 class='display-3'>Sign in</h2>

      <%= form_for resource, as: resource_name, url: session_path(resource_name) do |form| %>
        <%= render 'devise/shared/labeled_email_field',
                   form:      form,
                   name:      :email,
                   autofocus: true %>

        <%= render 'devise/shared/labeled_password_field',
                   form:         form,
                   name:         :password,
                   autocomplete: 'current-password' %>

        <div class='form-check form-switch mb-3'>
          <%= form.check_box :remember_me, checked: true,     class: 'form-check-input' %>
          <%= form.label     :remember_me, 'Stay signed in?', class: 'form-check-label' %>
        </div>

        <div class='actions'>
          <%= form.submit 'Sign in â†’', class: 'btn btn-primary btn-lg' %>
        </div>
      <% end %>

      <%= render 'devise/shared/links' %>

    <% end %>
  <% end %>
</div><!-- .container -->
