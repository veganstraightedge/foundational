<div class='container'>
  <%= tag.div class: wrapper_row_classes do %>
    <%= tag.div class: wrapper_columns_classes do %>

      <h2 class='display-3'>Forgot your password?</h2>

      <%= form_for resource, as: resource_name, url: password_path(resource_name), html: { method: :post } do |form| %>
        <%= render 'devise/shared/labeled_email_field', form: form, name: :email %>

        <div class='actions'>
          <%= form.submit 'Send reset password instructions â†’', class: 'btn btn-primary btn-lg' %>
        </div>
      <% end %>

      <%= render 'devise/shared/links' %>

    <% end %>
  <% end %>
</div><!-- .container -->
