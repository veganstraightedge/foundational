<div class="container">
  <div class="col-12 col-md-8 offset-md-2">

    <h2 class="display-3">Change your password</h2>

    <%= form_for resource, as: resource_name, url: password_path(resource_name), html: { method: :put } do |form| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <%= form.hidden_field :reset_password_token %>

      <%= render "devise/shared/labeled_password_field",
                  form: form,
                  name: :password,
                  label: "New password",
                  note: "#{@minimum_password_length} characters minimum" %>

      <%= render "devise/shared/labeled_password_field",
                  form: form,
                  name: :password_confirmation,
                  label: "Confirm new password" %>

      <div class="actions">
        <%= form.submit "Save password â†’" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>

  </div><!-- main column -->
</div><!-- .container -->
