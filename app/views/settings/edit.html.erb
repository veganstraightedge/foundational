<div class='container'>
  <h2 class='display-3'>
    Edit Setting
  </h2>

  <div class='row mt-5'>
    <div class='col-12 col-md-5 col-lg-3'>
      <%= render 'nav', grouped_settings: @grouped_settings %>
    </div><!-- .col -->

    <div class='col-12 col-md-7 col-lg-9'>
      <small class="h6 text-uppercase text-muted"><%= @setting.group %></small>
      <h3><%= @setting.name %></h3>
      <p class='h5 font-weight-normal mb-3'><%= @setting.description %></p>

      <%= form_with model: @setting, local: true do |form| %>
        <div class='form-group'>
          <%= form.text_field :content, autofocus: true, class: 'form-control form-control-lg' %>
        </div>

        <div class='actions'>
          <%= form.submit %>
        </div>
      <% end %>
    </div><!-- .col -->
  </div><!-- .row -->
</div>
